{
	"compilerOptions": {
		"lib": ["ES2021"],
		"target": "esnext",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["node"],
		"moduleResolution": "node",
		"resolveJsonModule": true,

		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["alt/**/*", "src/**/*"]
}
